    <div class="overflow-x-auto w-full mt-6">
        <table class="table table-zebra w-full">
            <!-- head -->
            <thead class="bg-gray-500">
            <tr class="bg-gray-500">
                <th>Member id</th>
                <th>Name</th>
                <th>Address</th>
                <th>Last dvd title</th>
                <th>Last date out</th>
                <th>Days since last loan</th>
            </tr>
            </thead>
            <tbody>
            <!-- row 1 -->
            @if (ViewBag.context is not null)
            {
                @foreach (var data in ViewBag.context)
                {
                    <tr>
                        <th>@data.memberId</th>
                        <td>@data.memberName</td>
                        <td>@data.memberAddress</td>
                        <th>@data.dateOut</th>
                        <td>@data.dvdTitle</td>
                        <td>@data.daysSinceLastLoan</td>
                    </tr>
                }
            }
            </tbody>
        </table>
    </div>
</div>