<div class="flex flex-col px-20 mt-16 w-full">
    <div class="mt-16 w-full mb-8">
        <div class="flex justify-between">
            <form class="flex gap-3">
                <input type="number" name="copyNumber" placeholder="Search by copy number" class="input input-bordered bg-base-200"/>
                <input type="submit" class="btn bg-gray-600" value="Search"/>
            </form>
            <a asp-controller="Loan" asp-action="AddLoan"><label for="membership" class="btn btn-primary">Loan a DVD</label></a>
        </div>
    </div>
    <div class="overflow-x-auto w-full mt-1">
        <h3 class="text-md mb-2">All loans</h3>
        <table class="table table-zebra w-full">
            <!-- head -->
            <thead class="bg-gray-500">
            <tr class="bg-gray-500">
                <th>Member Name</th>
                <th>Dvd Name</th>
                <th>Dvd Number</th>
                <th>Dvd Copy Number</th>
                <th>Date issued</th>
                <th>Return</th>
            </tr>
            </thead>
            <tbody>
            
            @if (ViewBag.loans is not null)
            {
                @foreach (var loan in ViewBag.loans)
                {
                    <tr>
                        <th>@loan.memberName</th>
                        <td>@loan.dvdName</td>
                        <td>@loan.dvdTitleNumber</td>
                        <td>@loan.dvdCopyNumber</td>
                        <td>@loan.dateIssued</td>
                        <td><a href="@Url.Action("ReturnLoan", "Loan", new{id = loan.loanId})" class="btn btn-sm border-0 bg-primary">Return</a></td>
                    </tr>
                }
            }
            </tbody>
        </table>
    </div>
</div>