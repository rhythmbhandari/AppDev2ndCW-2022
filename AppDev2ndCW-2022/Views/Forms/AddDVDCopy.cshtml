@model DvdCopy
<div class="flex justify-center w-full h-full mt-10">
    <form action="/DVD/AddDvdCopy" method="post" class="flex flex-col items-center gap-4 w-full">
        <h2 class="text-xl mb-4">Add new Dvd copy</h2>
        <div class="form-control">
            <label asp-for="DvdNumber" class="text-sm mb-1" for="studio">Dvd Number</label>
            <select asp-for="DvdNumber" id="studio" class="select bg-base-200 input-bordered w-[35rem]">
                <option disabled selected value="null">Select a number</option>
                @if (ViewBag.dvdTitles is not null)
                {
                    @foreach (var dvdTitle in ViewBag.dvdTitles)
                    {
                        <option value="@dvdTitle.DvdNumber">@dvdTitle.DvdNumber</option>
                    }
                }
            </select>
        </div>
        <div class="flex flex-col gap-7">
            <div class="form-control">
                <label asp-for="DatePurchased" class="text-sm mb-1" for="studio">Date Purchased</label>
                <input asp-for="DatePurchased" type="date" class="input bg-base-200 input-bordered w-[35rem]"/>
            </div>
            <div class="form-control mb-10">
                <input type="submit" class="bg-black btn w-[35rem]" value="Add Copy"/>
            </div>
        </div>
    </form>
</div>