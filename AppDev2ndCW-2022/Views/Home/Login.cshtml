@{
    var returnUrl = ViewData["ReturnUrl"];
}
<div class="flex justify-center w-full">
    <form action="/login?ReturnUrl=@System.Net.WebUtility.UrlEncode(returnUrl.ToString())" method="post" class="flex flex-col items-center gap-4 mt-16">
        <h2 class="text-xl mb-3">Login</h2>
        <div class="form-control">
            <label for="email" class="text-sm">Email</label>
            <input id="email" name="email" type="text" placeholder="First name" class="input input-bordered w-[30rem]">
        </div>
        <div class="form-control">
            <label for="contact" class="text-sm">Password</label>
            <input id="contact" name="contact" type="Password" placeholder="Last name" class="input input-bordered w-[30rem]">
        </div>
        <div class="form-control">
            <input type="submit" class="btn bg-black w-[30rem]" value="login"/>
        </div>
    </form>
</div>